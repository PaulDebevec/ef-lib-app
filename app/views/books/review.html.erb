<h1>New Books to Review</h1>

<% if flash[:notice].present? %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert].present? %>
  <p class="alert"><%= flash[:alert] %></p>
<% end %>

<% if @books.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Category</th>
        <th>Type</th>
        <th>Imported At</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.category %></td>
          <td><%= book.type %></td>
          <td><%= l(book.created_at, format: :short) %></td>
          <td>
            <%= button_to "Deliver", deliver_book_path(book), method: :patch %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No new books to review.</p>
<% end %>